  "engines": {
    "node": ">=12.0.0",
    "npm": ">=6.0.0"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "inversify": "^5.0.5",
    "inversify-binding-decorators": "^4.0.0",
    "reflect-metadata": "^0.1.13",
