    "start": "npm run server",
    "test:lint": "eslint 'src/**/*.{js,ts,tsx}'",
    "test": "jest --config jestconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aerabi/nodejs-api-starter.git"
