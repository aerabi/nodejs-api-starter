{
  "name": "nodejs-api-starter",
  "version": "1.0.0",
  "description": "Node.js API Starter",
  "main": "dist/server.ts",
  "scripts": {
    "build:all": "npm run build:routes && npm run build:ts",
    "build:routes": "tsoa routes",
    "build:ts": "tsc -p src",
    "postinstall": "npm run build:all",
    "lint": "eslint 'src/**/*.{js,ts,tsx}' --quiet --fix",
